<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.profile.ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:scrollbars="none">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rlPickImage"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="2dp"
                android:visibility="visible"
                app:layout_constraintBottom_toTopOf="@+id/editTextUserName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivImage"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/iv_profile"
                    app:civ_border_color="@color/main"
                    app:civ_border_width="2dp" />
            </RelativeLayout>

            <EditText
                android:id="@+id/etFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/bg_field"
                android:drawableStart="@drawable/ic_baseline_person_24"
                android:drawablePadding="14dp"
                android:drawableTint="@color/main"
                android:ems="10"
                android:hint="First Name"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:padding="14dp"
                android:textColor="@color/main"
                android:textColorHint="@color/main" />

            <EditText
                android:id="@+id/etLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_field"
                android:drawableStart="@drawable/ic_baseline_person_24"
                android:drawablePadding="14dp"
                android:drawableTint="@color/main"
                android:ems="10"
                android:hint="Last Name"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:padding="14dp"
                android:textColor="@color/main"
                android:textColorHint="@color/main" />

            <EditText
                android:id="@+id/etCourseTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_field"
                android:drawableStart="@drawable/ic_baseline_title_24"
                android:drawablePadding="14dp"
                android:drawableTint="@color/main"
                android:ems="10"
                android:hint="Course Title"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:padding="14dp"
                android:textColor="@color/main"
                android:textColorHint="@color/main" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_field"
                android:drawableStart="@drawable/ic_baseline_email_24"
                android:drawablePadding="14dp"
                android:drawableTint="@color/main"
                android:ems="10"
                android:focusable="false"
                android:hint="University Institution Email"
                android:inputType="textEmailAddress"
                android:minHeight="48dp"
                android:padding="14dp"
                android:textColor="@color/main"
                android:textColorHint="@color/main" />

            <EditText
                android:id="@+id/etYearOfStudy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_field"
                android:drawableStart="@drawable/ic_baseline_calendar_month_24"
                android:drawablePadding="14dp"
                android:drawableTint="@color/main"
                android:ems="10"
                android:hint="Year Of Study"
                android:inputType="number"
                android:minHeight="48dp"
                android:padding="14dp"
                android:textColor="@color/main"
                android:textColorHint="@color/main" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSave"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:background="@drawable/bg_field"
                android:backgroundTint="@color/main"
                android:text="Save"
                android:textAllCaps="false"
                android:textColor="@color/white" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </ScrollView>

</RelativeLayout>
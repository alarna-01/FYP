<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:scrollbars="none">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rlPickImage"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="2dp"
                android:layout_marginBottom="30dp"
                android:visibility="visible"
                app:layout_constraintBottom_toTopOf="@+id/editTextUserName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivImage"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/iv_profile"
                    app:civ_border_color="@color/main"
                    app:civ_border_width="2dp" />

                <TextView
                    android:id="@+id/textViewPhoto"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ivImage"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="13dp"
                    android:text="Take Your Photo"
                    android:textAlignment="center"
                    android:textColor="@color/main" />
            </RelativeLayout>

            <TextView
                android:id="@+id/textViewProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Profile Information"
                android:textAlignment="center"
                android:textColor="@color/main"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/editTextUserName"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayout" />

            <EditText
                android:id="@+id/etFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/bg_field"
                android:drawableStart="@drawable/ic_baseline_person_24"
                android:drawablePadding="14dp"
                android:drawableTint="@color/main"
                android:ems="10"
                android:hint="First Name"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:padding="14dp"
                android:textColor="@color/main"
                android:textColorHint="@color/main"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayout" />

            <EditText
                android:id="@+id/etLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_field"
                android:drawableStart="@drawable/ic_baseline_person_24"
                android:drawablePadding="14dp"
                android:drawableTint="@color/main"
                android:ems="10"
                android:hint="Last Name"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:padding="14dp"
                android:textColor="@color/main"
                android:textColorHint="@color/main"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayout" />

            <EditText
                android:id="@+id/etCourseTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_field"
                android:drawableStart="@drawable/ic_baseline_title_24"
                android:drawablePadding="14dp"
                android:drawableTint="@color/main"
                android:ems="10"
                android:hint="Course Title"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:padding="14dp"
                android:textColor="@color/main"
                android:textColorHint="@color/main"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayout" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_field"
                android:drawableStart="@drawable/ic_baseline_email_24"
                android:drawablePadding="14dp"
                android:drawableTint="@color/main"
                android:ems="10"
                android:hint="University Institution Email"
                android:inputType="textEmailAddress"
                android:minHeight="48dp"
                android:padding="14dp"
                android:textColor="@color/main"
                android:textColorHint="@color/main"
                app:layout_constraintEnd_toEndOf="@+id/editTextUserName"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/editTextUserName"
                app:layout_constraintTop_toBottomOf="@+id/editTextUserName" />

            <EditText
                android:id="@+id/etYearOfStudy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_field"
                android:drawableStart="@drawable/ic_baseline_calendar_month_24"
                android:drawablePadding="14dp"
                android:drawableTint="@color/main"
                android:ems="10"
                android:hint="Year Of Study"
                android:inputType="number"
                android:minHeight="48dp"
                android:padding="14dp"
                android:textColor="@color/main"
                android:textColorHint="@color/main"
                app:layout_constraintEnd_toEndOf="@+id/editTextUserName"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/editTextUserName"
                app:layout_constraintTop_toBottomOf="@+id/editTextUserName" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_field"
                android:drawableStart="@drawable/ic_baseline_lock_24"
                android:drawablePadding="14dp"
                android:drawableTint="@color/main"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:padding="14dp"
                android:textColor="@color/main"
                android:textColorHint="@color/main"
                app:layout_constraintStart_toStartOf="@+id/editTextUserName"
                app:layout_constraintTop_toBottomOf="@+id/editTextEmail" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnRegister"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:background="@drawable/bg_field"
                android:backgroundTint="@color/main"
                android:text="Setup Profile"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:layout_constraintBottom_toTopOf="@+id/textViewLogin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextPassword" />

            <TextView
                android:id="@+id/tvLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:text="@string/already"
                android:textColor="@color/main"
                app:layout_constraintTop_toBottomOf="@+id/buttonSignUp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </ScrollView>

</RelativeLayout>